<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 다른 mapper와 중복 -->
  <mapper namespace="com.ghsoft.mapper.BoardMapper">
 
 
    <!-- Register Board data -->
    <insert id="insertBoard">
        insert into s_board (b_title, b_writer, b_detail, b_date) values(#{b_title},#{b_writer},#{b_detail},SYSDATE())
 
    </insert>
    
    <!-- Board Update-->
    <update id="updateBoard">
        update s_board set b_title=#{b_title} , b_detail = #{b_detail} where b_no = #{b_no}
    </update>
    
     <!-- Board delete 삭제하기 -->
    <delete id="deleteBoard">
        delete from s_board where b_no = #{b_no}
    </delete>
    
    <!-- select Board Detail -->
    <select id="detailBoard" resultType="com.ghsoft.dto.BoardDTO">
            select * from s_board where b_no = #{b_no}
    </select>
 
 	 <!-- Board List 리스트보기 -->
    <select id="listBoard" resultType="com.ghsoft.dto.BoardDTO">
    <![CDATA[
        select * from s_board 
        order by b_no DESC
    ]]>
    </select>
    
    
 
</mapper>

