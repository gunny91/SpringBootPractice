<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.ghsoft.mapper.usermapper">
	<insert id="insertUser" >
		insert into user_table(user_id, user_pw,user_name) values(#{userId},#{userPw}, #{userName})
	</insert>
	
	<select id="login" resultType="com.ghsoft.user.dto.UserDTO">
		select * from user_table where user_id = #{userId}
	</select>
</mapper>